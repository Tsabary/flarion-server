{
  "include": ["src/**/*"],
  "exclude": ["recycle_bin"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
